extends ../shared/template
block content
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Facebook
            th Twitter
        body
            tr
              td= client.email
              td= client.phone
              td: a(href=user.facebook, target='_blank')= client.facebook
              td: a(href=user.twitter, target='_blank')= client.twitter
  .row
    .col-xs-6
      form(role='form', method='post', action='/message/#{client._id}')
        .radio
          label
            input(type='radio', name='mtype', value='text',  checked=true)
            span Text
        .radio
          label
            input(type='radio', name='mtype', value='email')
            span Email
        .radio
          label
            input(type='radio', name='mtype', value='internal')
            span Internal
        .form-group
          label(for='message') Message
          textarea.form-control#message(name='message')
        button.btn.btn-primary(type='submit') Send

